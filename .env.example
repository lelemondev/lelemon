# Lelemon Environment Variables
# Copy this file to .env and modify as needed

# =============================================================================
# REQUIRED
# =============================================================================

# JWT secret for authentication (min 32 characters in production)
JWT_SECRET=change-me-in-production-use-random-string

# =============================================================================
# OPTIONAL
# =============================================================================

# Log level: debug, info, warn, error
LOG_LEVEL=info

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000

# API URL (used by frontend at build time)
NEXT_PUBLIC_API_URL=http://localhost:8080

# =============================================================================
# DATABASE (only needed for postgres/clickhouse variants)
# =============================================================================

# PostgreSQL password (docker-compose.postgres.yml)
# POSTGRES_PASSWORD=lelemon

# ClickHouse password (docker-compose.clickhouse.yml)
# CLICKHOUSE_PASSWORD=

# =============================================================================
# GOOGLE OAUTH (optional)
# =============================================================================

# GOOGLE_CLIENT_ID=your-client-id
# GOOGLE_CLIENT_SECRET=your-client-secret
